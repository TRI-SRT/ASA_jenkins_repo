pipeline {
    agent any
    
    environment {
        RELEASE = '20.04'
        LOG_LEVEL = 'INFO'   // moved to global so all stages can access
    }

    stages {

        stage('Build') {
            steps {
                echo "Building release ${RELEASE} with log level ${LOG_LEVEL}..."
            }
        }
        
        stage('Test') {
            steps {
                echo "Testing release ${RELEASE} with log level ${LOG_LEVEL}..."
            }
        }
    }
}
